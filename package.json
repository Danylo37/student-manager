{
    "name": "student-manager",
    "version": "1.0.0",
    "description": "Student management application with lesson scheduling",
    "main": "main/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
        "build": "vite build",
        "package": "electron-builder",
        "package:win": "electron-builder --win",
        "package:mac": "electron-builder --mac",
        "package:linux": "electron-builder --linux",
        "rebuild": "electron-rebuild -f -w better-sqlite3"
    },
    "keywords": [],
    "author": {
        "name": "Danylo Lopatin",
        "email": "danilofokinn@gmail.com"
    },
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "@vitejs/plugin-react": "^5.1.2",
        "autoprefixer": "^10.4.23",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^40.0.0",
        "electron-builder": "^26.4.0",
        "electron-icon-builder": "^2.0.1",
        "electron-rebuild": "^3.2.9",
        "postcss": "^8.5.6",
        "prettier": "^3.8.0",
        "tailwindcss": "^3.4.19",
        "vite": "^7.3.1",
        "wait-on": "^9.0.3"
    },
    "dependencies": {
        "better-sqlite3": "12.6.2",
        "date-fns": "^4.1.0",
        "lucide-react": "^0.562.0",
        "react": "^19.2.3",
        "react-datepicker": "^9.1.0",
        "react-dom": "^19.2.3",
        "zustand": "^5.0.10"
    },
    "build": {
        "appId": "com.studentmanager.app",
        "productName": "Student Manager",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "main/**/*",
            "package.json",
            "!main/db/*.db",
            "!main/db/*.db-*"
        ],
        "extraResources": [
            {
                "from": "main/db/schema.sql",
                "to": "main/db/schema.sql"
            }
        ],
        "asarUnpack": [
            "node_modules/better-sqlite3/**/*"
        ],
        "win": {
            "icon": "build/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "mac": {
            "icon": "build/icon.icns",
            "target": [
                "dmg"
            ]
        },
        "linux": {
            "icon": "build/icon.png",
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Education"
        }
    }
}
